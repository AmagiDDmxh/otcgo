label(name, top=20px, left=0px)
  background url('../../images/'+ name + '.png') no-repeat center
  position absolute
  top top
  left left
  width: 120px
  height: 40px

placeholder()
  &::-webkit-input-placeholder
    {block}
  &:-moz-placeholder
    {block}
  &::-moz-placeholder
    {block}
  &:-ms-input-placeholder
    {block}

input.el-input__inner
  margin-bottom: 10px
  +placeholder()
    text-align: center
    color: #000

.el-row
  h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6
    margin: 0 0 10px

.el-progress-bar
  padding-right: 0
  *
    border-radius: 0
.el-progress__text
  display: none

.thumbnail
  border: none
  .caption
    padding: 20px
    background: #f2f2f2
    color: #ababab
    line-height: 13px
    h4
      font-size: 21px
      color: #000
    p
      font-size: 14px
  .status__thumbnail__bg
    height: 200px !important
    width: 100%
    background: linear-gradient(45deg, #4666f3, #35d3e4);
    color: #fff
    font-size: 28px
    text-align: center
    padding: 70px
    position: relative
    & > .img
      label('proceeding')
    &-pre > .img
      label('upcoming')
    &-failure > .img, &-success > .img
      label('over')
    &-success
      background: linear-gradient(135deg, #00f300, #35d3e4);
    &-failure
      background: linear-gradient(135deg, #ff4949, #35d3e4);


.status__body
  padding: 30px 0

.status__content
  border-bottom: 1px solid #eee

.status__operation
  height: 375px
  display: flex
  flex-direction: column
  justify-content: space-between
  .el-row
    margin: 0
  .el-button
    margin-bottom: 10px
  .btn.btn-block
    padding: 0
  /*.status__btn-details
    background: #000
    border-color: #000*/

.detail-content
  font-size: 16px
  font-weight: 700

.highlight
  line-height: 30px
  font-size: 16px
  font-weight: 700
  color: #9e9e9e
  border: 2px dashed #9e9e9e
  border-radius: 4px
  text-align: center
  span
    color: #F44336

.el-row
  margin: 20px 0

.el-row:first-child
  margin: 0 0 20px

.ico__button--success
  background-color: #13ce66 !important
  color: white!important

.ico__button--failure
  background-color: #ff4949 !important
  color: white!important

.ico__column-gutter
  height: 30px