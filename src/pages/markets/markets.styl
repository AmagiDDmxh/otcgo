.markets
  .content
    min-height: 500px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;

.baz-from {
  margin-top: 60px;
  margin-bottom: 12px;
  padding-left: 53px;
  .form-group {
    width: auto !important;
    padding: 0 10px;
    input {
      width: 176px !important;
    }
  }
}

.table-js th {
  background-color: #eeeeee;
  padding: 10px 0;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  padding-left: 26px !important;
  color: 636363;
  tr td {
    border-top: none !important;
  }
}

.pl27 > tr > td {
  padding-left: 27px !important
}

.table-js.table-striped > tbody > tr:nth-child(even) {
  background-color: #f8f8f8;
}

/*amount-bar*/

.amount-tb-bar {
  padding-left: 0px !important;
}

.amount-bar {
  height: 20px;
}

.amount-bar-buy {
  background: #E48786;
}

.amount-bar-sell {
  background: #AEC764;
}

.sell-name {
  color: #AEC764;
}

.buy-name {
  color: #E48786;
}

.btn--purchase {
  padding: 8px 14px;
  border: 1px solid #009cff;
  background: #fff;
  color: #009cff;
  font-size: 18px;
  letter-spacing: 4px;
  &:hover {
    color: #fff;
    text-decoration: none;
    background: #009cff;
  }
}
