.markets
  .content
    min-height: 500px
    display: flex
    flex-direction: column
    justify-content: space-between
    &__header
      font-size: 20px
      font-weight: lighter
      margin-bottom: 10px
  &__thumbnail
    display: block
    margin-bottom: 20px
    border: 1px solid #e9e9e9
    transition: border .2s ease-in-out
  &__assets
    & > *
      padding 8px
    &__caption
      color: #464646
      font-weight: bold
    &__content
      color: #7e7e7e
      background-color: #f2f2f2
      p
        margin: 0
  &__barb
    display: flex
    justify-content: center
    align-items: center
    height: 240px
    a:first-child
      border-left: 1px solid #dadada
      color: #009cff
    a
      border-right: 1px solid #dadada
      padding: 0 10px
      color: #000

.baz-from
  margin-top: 60px
  margin-bottom: 12px
  padding-left: 53px
  .form-group
    width: auto !important
    padding: 0 10px
    input
      width: 176px !important


.check-table
  margin-bottom: 0


.table-js th
  background-color: #eeeeee
  padding: 10px 0
  border-top: 1px solid #ccc
  border-bottom: 1px solid #ccc
  padding-left: 26px !important
  color: #636363
  tr td
    border-top: none !important


.pl27 > tr > td
  padding-left: 27px !important


.table-js.table-striped > tbody > tr:nth-child(even) {
  background-color: #f8f8f8
}

/*amount-bar*/

.amount
  &-tb-bar
    padding-left: 0 !important
  &-bar
    height: 20px
    &-buy
      background: #E48786
    &-sell
      background: #AEC764

.sell-name
  color: #AEC764


.buy-name
  color: #E48786


.btn--purchase
  padding: 8px 14px
  border: 1px solid #009cff
  background: #fff
  color: #009cff
  font-size: 18px
  letter-spacing: 4px
  &:hover
    color: #fff
    text-decoration: none
    background: #009cff


.flex
  display: flex
  justify-content: space-between
  margin-bottom: 20px
  button
    padding: 15px 26px
    font-size: 15px
    letter-spacing: 2px


