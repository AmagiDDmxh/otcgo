.crow
  width: 100%
  padding-left: 15px
  padding-right: 15px

.crow .msg
  width: 100%
  border-radius: 0

.login-body #select-file
  border-top-right-radius: 0
  border-bottom-right-radius: 0

/*btn-file*/

.btn-bs-file
  position: relative
  background: #009cff
  border-color: #009cff

.btn-bs-file:hover
  background: #009cff
  border-color: #009cff

.btn-bs-file input[type="file"]
  position: absolute
  top: -9999999
  filter: "alpha(opacity=0)"
  opacity: 0
  width: 0
  height: 0
  outline: none
  cursor: inherit

.btn-select-file
  border-top-left-radius: 0
  border-bottom-left-radius: 0

.ad-tips ol
  padding: 30px 20px 30px 32px
  color: #aeaeae
  background: #f3f3f3

.error-text
  display: none
  padding-left:10px
  margin-top:5px

.has-error + .error-text
  display: inline-block

