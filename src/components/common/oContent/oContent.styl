nav
  position: relative;
  z-index: 1;
  margin-bottom 10px
  a
    position: relative;
    display: inline-block;
    padding: .3em 1em 0;
    color: #fff;
    text-decoration: none;
    width: 120px
    height: 40px
    &::before
      transform: scale(1.2, 1.3) perspective(.5em) rotateX(5deg);
      transform-origin: bottom left;
      content: ''; /* To generate the box */
      position: absolute;
      top: 0; right: 0; bottom: 0; left: 0;
      z-index -1
      border none
      background #b2b2b2

    &.selected { z-index: 2;}
    &.selected::before {
      background-color: #009cff;
      margin-bottom: -.08em;
    }

