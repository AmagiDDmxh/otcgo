ul > .frist {
  background: none;
}

ul > li > .menu {
  color: #fff !important;
  font-size: 1.2em;
  background: none;
  padding-left: 30px !important;
  padding-right: 30px !important;
}

ul > li > .menu:link {
  color: #fff !important;
}

ul > li > .menu:visited {
  color: #fff !important;
}

ul > li > .menu:hover {
  color: #fff !important;
}

ul > li > .menu:active {
  color: #fff !important;
}

.navbar-nav li:hover {
  background: #009cff;
}

.navbar-nav li:hover a {
  color: #fff;
  text-decoration: none;
}

.menu:hover ul {
  display: block;
}

.menulist > li {
  list-style: none;
  background: #555;
  width: 160px;
  height: 38px;
  line-height: 38px;
  text-align: center;
  font-size: 15px;
  border-top: 1px solid #666;
}

.menulist > li:hover {
  background: #333
}

.menulist > li:hover a {
  color: #337ab7
}

.menulist > li > a {
  color: #fff !important;
}

.menulist {
  position: absolute;
  top: 50px;
  left: 0;
  z-index: 100;
  padding: 0;
  display: none;
}

.search {
  display: inline-block;
}

#des {
  display: inline-block;
  vertical-align: bottom;
  margin-left: 20px;
}

.navbar-default {
  margin: 15px !important;
}

.navbar-collapse {
  padding: 0;
}

.uid {
  color: #009cfd !important;
}