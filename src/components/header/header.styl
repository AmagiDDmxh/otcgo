.btn-default a {
  text-decoration: none;
}

.carousel-control.right img {
  margin-left: -1px;
}

.header-a:hover {
  text-decoration: underline;
}

.logo {
  height: 148px;
  padding: 50px;
}

.logo img {
  margin: 0 10px 0 10px;
}

.logo-left {
  float: left;
  margin-top: 20px;
}

.logo-right {
  float: right;
  padding: 50px 20px 0 0;
}

.logo-right li {
  list-style: none;
  float: left;
  border-right: 1px solid #dadada;
}

.logo-right .border {
  border-left: 1px solid #dadada;
}

.logo-right .border a {
  color: #009cfd;
}

.logo-right li a {
  color: #7c7c7c;
  margin: 0 13px;
}

.logo-right li a:hover {
  color: #009cfd;
}

.navbar {
  background-color: #000 !important;
  border: none !important;
  border-radius: 0 !important;
  font-family: "微软雅黑";

}

#head nav {
  margin: 0px !important;
}

.navbar-nav .active {
  background: #009cff;
}

.form-control,
.form-group {
  width: 255px !important;
}

.container-fluid {
  width: 1200px;
  margin: 0 auto;
}

.nav {
  width: 65%;
}

.nav li {
  float: left;
}

